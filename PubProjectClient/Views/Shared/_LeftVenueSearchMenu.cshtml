@model PubProjectApi.Models.ModelsView.Venue.GastronomicVenueListView
@{
    ViewData["Title"] = "_LeftVenueSearchMenu";
}

@using (Html.BeginForm("Search", "Venue", FormMethod.Get, new { @class = "form-signin", role = "form" }))
{
    <form>
        <div class="row">
            <h2 class="form-signin-heading col-xs-4">Wyszukaj Oferty</h2>
            <div class="col-xs-3">
                @Html.TextBoxFor(m => m.SearchVenue.City, new { @class = "form-control not-round input", placeholder = "Miasto", tabindex = 1 })
            </div>
            <div class="col-xs-3">
                @Html.TextBoxFor(m => m.SearchVenue.GastronomicVenueType, new { @class = "form-control not-round input", placeholder = "Wybierz Rodzaj Lokalu" })
            </div>
            <div class="col-xs-2">
                <button class="btn btn-lg btn-primary btn-block not-round" type="submit">Szukaj</button>
            </div>
        </div>
    </form>
}