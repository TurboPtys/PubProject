@model PubProjectClient.Models.AccountViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}
<div class="content login-page">
    <img class="page-background" src="~/images/Bar/2.jpg" />
    @using (Html.BeginForm("Login", "Account2", FormMethod.Post, new { @class = "form-signin login-form col-lg-4", role = "form" }))
    {
    <form>
        <h2 class="form-signin-heading">Zaloguj się</h2>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control not-round input", placeholder = "Email", tabindex = 1 })
        @Html.ValidationMessageFor(m => m.Email)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control not-round input", placeholder = "Hasło", tabindex = 3 })
        @Html.ValidationMessageFor(m => m.Password)
        @*<div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Zapamiętaj mnie
            </label>
        </div>*@
        <button class="btn btn-lg btn-primary btn-block not-round" type="submit">Zaloguj się</button>
        <input type="button" class ="btn btn-lg btn-primary btn-block not-round" value="Rejestracja" onclick="location.href='@Url.Action("Register", "Account2")'" />
        <a href="">Zapomniałem hasła</a>
    </form>
    }
</div>

