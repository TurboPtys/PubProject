@model PubProjectClient.Models.AccountViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}
<div class="content login-page">
    <img class="page-background" src="~/images/Bar/2.jpg" />
    <form class="form-signin login-form col-lg-4">
        <h2 class="form-signin-heading">Zaloguj się</h2>
        <label for="inputEmail" class="sr-only">Adres Email</label>
        <input type="email" id="inputEmail" class="form-control not-round input" placeholder="Adres Email" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Hasło</label>
        <input type="password" id="inputPassword" class="form-control not-round input" placeholder="Hasło" required="">
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Zapamiętaj mnie
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block not-round" type="submit">Zaloguj się</button>
        <button class="btn btn-lg btn-primary btn-block not-round" type="submit">Rejestracja</button>
        <a href="">Zapomniałem hasła</a>
    </form>
</div>

