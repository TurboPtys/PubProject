            <img class="pic-menu" src="~/images/Bar/5.jpg">
            <h1 class="menu"> Oferty dla ciebie</h1>
        </div>
        <div class="board-menu">
            <div class="container">
                <div class="row row-flex">

                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="card form-group col">
                            <div class="form-group row card-header">
